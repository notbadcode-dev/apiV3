{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "tsconfig.build.json",
    "assets": [
      {
        "include": "environment/**/*",
        "outDir": "dist/environment"
      },
      {
        "include": "cert/**/*",
        "outDir": "dist/cert"
      }
    ],
    "watchAssets": true
  }
}
